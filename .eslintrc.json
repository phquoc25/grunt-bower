{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    
    "globals": {
        "module": true,
        "require": true,
        "describe": true,
        "it": true,
        "beforeEach": true,
        "afterEach": true,
        "sinon": true,
        "expect": true,
        "KDifference": true,
        "SimpleArraySum": true,
        "utils": true
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-new": "off",
        "no-console": "warn",
        "no-sequences": "warn"
    }
}